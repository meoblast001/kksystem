.page
  %h2= t('users.sessions.new.header')
  - unless alert.nil?
    .error_box= alert
  = simple_form_for @user, :url => user_session_path do |f|
    = f.input :login, :label => t('users.login')
    = f.input :password, :label => t('users.password')
    = f.button :submit, :value => t('users.sessions.new.submit'), :class => 'btn btn-primary'

.page
  %h2= t('cardsets.import.header')
  - unless alert.nil?
    .error_box= alert
  %form{ :action => cardsets_import_submit_path, :method => 'POST', :enctype => 'multipart/form-data' }
    = token_tag
    %label{ :for => 'import_type' }= t('cardsets.import_export.type')
    %select#import_type{ :name => 'import_type' }
      %option= t('cardsets.import_export.types.select')
      %option{ :value => 'anki_text' }= t('cardsets.import_export.types.anki_text')
    %label{ :for => 'import_file' }= t('cardsets.import.form.file')
    %input#import_file{ :type => 'file', :name => 'import_file' }
    %input.btn.btn-primary{ :type => 'submit', :value => t('cardsets.import.form.submit') }

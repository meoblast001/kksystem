.page.container-fluid
  .row
    .col-md-4
      .list-group
        - @cardsets.each do |cardset|
          - if cardset == @cardset
            .list-group-item.active= cardset.name
          - else
            %a.list-group-item{ :href => url_for(cardset) }= cardset.name
      %a.btn.btn-default.centred-block{ :href => new_cardset_path }= t('cardsets.show.create_link')
    .col-md-8
      %h2= "#{t('cardsets.show.header')}: #{@cardset.name}"
      = render 'form'
      %h3= t('cardsets.show.actions')
      %table.fixed-full-sized-table
        %tr
          %td
            %a.btn.btn-default.full-width{ :href => new_cardbox_path(:cardset_id => @cardset.id) }
              %span.glyphicon.glyphicon-plus
              = t('cardboxes.new.header')
          %td
            %a.btn.btn-default.full-width{ :href => list_cardboxes_path(:cardset_id => @cardset.id) }
              %span.glyphicon.glyphicon-pencil
              = t('cardboxes.show.header')
        %tr
          %td
            %a.btn.btn-default.full-width{ :href => new_card_path(:cardset_id => @cardset.id) }
              %span.glyphicon.glyphicon-plus
              = t('cards.new.header')
          %td
            %a.btn.btn-default.full-width{ :href => list_cards_path(:cardset_id => @cardset.id) }
              %span.glyphicon.glyphicon-pencil
              = t('cards.show.header')
        %tr
          %td
            %a.btn.btn-default.full-width{ :href => '#' }
              %span.glyphicon.glyphicon-import
              = t('cardsets.import.header')
          %td
            %a.btn.btn-default.full-width{ :href => '#' }
              %span.glyphicon.glyphicon-export
              = t('cardsets.export.header')
    .clearfloats

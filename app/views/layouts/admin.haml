- content_for :content do
  .page.container-fluid
    .row
      .col-md-2
        .list-group
          - @admin_navlinks.each do |link, title|
            - if request.fullpath == link
              .list-group-item.active= title
            - else
              %a.list-group-item{ :href => link }= title
      .col-md-10
        = yield

= render :template => 'layouts/application'
